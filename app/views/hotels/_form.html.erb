
<%= simple_form_for(@hotel) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :Car %>
    <%= f.input :Guide %>
    <%= f.input :Attraction %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
